#( 
    --------------------------------
    TRANSCRIPTION
    --------------------------------
)#
$buff = tri();

$numnotes = 25;
$N = $numnotes - 1;
$totaldur = 1500;

for $i in 0...$N do (
    $progress = $i / ($numnotes - 1);
    $onset = $progress * $totaldur;
    $pan = $progress;
    $gain = (1 - $progress) ** 2;
    $detune = 1200 * $progress;
    $buff.transcribe(
        @onset $onset 
        @gain $gain 
        @detune $detune
        @pan $pan
    )
);

render(@play 1)