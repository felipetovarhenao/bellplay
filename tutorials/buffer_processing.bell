#( 
    --------------------------------
    BUFFER PROCESSING
    --------------------------------
)#
$path = getmediapath('drums.wav');
$buff = importaudio($path);

## apply processing to buffer. Notice that we re-assign the variable.
$buff = $buff.process(
    ## reverse buffer
    reverse()
    ## apply basic reverb
    freeverb(@tail 500)
    ## reverse again
    reverse()
);
## transcribe and render
$buff.transcribe(@gain .125);
render(@play 1)