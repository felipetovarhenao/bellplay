BP_ESSENTIA_WRAPPER_FUNC = (
    $name,
    $settings = null,
    $output,
    $mode = 0,
    $modes = 0...3 -> (
        $mode = intersection($mode, $modes);
        if $mode == null then (
            printerror("invalid value for @mode in" $name "descriptor.")
        ) else (
            $mode = ("" "..." ":::" "~"):($mode + 1);
            [ 
                [ "name" $name + $mode ] 
                [ "settings" 
                    $settings
                ] 
                [ "output" $output ||| $name ] 
            ]
        )
    )
);

