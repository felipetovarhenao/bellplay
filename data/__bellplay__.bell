BP_GCD_FUNC = $x, $y -> if $y == 0 then abs($x) else BP_GCD_FUNC($y, $x % $y);

gcd = $llll -> for $x in flat($llll) do $gcd = BP_GCD_FUNC($gcd ||| $x, $x);

