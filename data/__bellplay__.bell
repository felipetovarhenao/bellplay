BP_LCM_FUNC = $x, $y -> if $x == 0 || $y == 0 then 0 else abs($x * $y) / BP_GCD_FUNC($x, $y);

lcm = $llll -> (
    for $x in flat($llll) do $lcm = max($lcm ||| $x, BP_LCM_FUNC($lcm ||| $x, $x))
);

