BP_RANDOM_CHOICE_FUNC = (
    $choices, 
    $n = 1, 
    $weights = null,
    $mode = 0 -> (
        if $mode == 0 then (
            $random = random;
            $rand = rand
        ) else (
            $random = xrandom;
            $rand = xrand
        );
        $len = length($choices);
        $sum = if $weights == null then 0 else reduce($weights, #+);
        for $i in 1...$n collect (
            if $sum == 0 then (
                $choices:$random(1, $len)
            ) else (    
                $choice = null;
                $prob = $rand() * $sum;
                for $x in $choices, $w in $weights as $choice == null with @iterationmode 1 do (
                    if $prob < $w then $choice = $x;
                    $prob -= $w 
                );
                $choice  
            )
        )
    )
);

