argsort = (
    $x, $function = null -> (
        $lambda = $function ||| ($a, $b -> $a < $b);
        $addrs = 1...length($x);
        sort($addrs @function ($a, $b -^ $x, $lambda -> $lambda($x:$a, $x:$b))) 
    ) 
);

