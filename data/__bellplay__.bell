samplelist = (
    $x, $i -> (
        if $x == null || $i == null then (
            printerror("you must provide values for @x and @i in samplelist()")
        );
        $i = min(1, max(0, $i));
        $N = length($x);
        $i = scale($i, 0, 1, 1, $N);
        $l = floor($i);
        $r = min($l + 1, $N);
        $m = fmod($i, 1);
        $x:[$l] * (1 - $m) + $x:[$r] * $m
    )
);

