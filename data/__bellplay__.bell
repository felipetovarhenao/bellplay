readfolder = (
    $path,
    $filetype = "audio" -> (
        BP_TMP_FOLDER = null;
        $info = BP_GET_PATH_INFO_FUNC($path @locate 1);
        if $info."extension" != null then printerror("invalid folder path:" $path);
        $path = $info."path";
        $types = (
            [ "audio" "WAVE" "AIFF" "Mp3" ]
            [ "midi" "Midi" ]
            [ "text" "TEXT" ]
            [ "folder" "fold" ]
            [ "all" ]
        ).$filetype;
        if $filetype != "all" && $types == null then printerror("invalid file type:" $filetype);
        BP_DISPATCH_FUNC("folder",
            [ "types" $types ]
            [ $path ]
        );
        BP_TMP_FOLDER
    )
);

