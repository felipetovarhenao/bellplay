scoreconfig = (
    $voicenames = "output",
    $clefs = "FFGG",
    $tonedivision = 8,
    $showdurations = 0,
    $showdynamics = 0,
    $midichannels = 1 -> (
        $config = for $clef in $clefs, $channel in $midichannels, $name in $voicenames with @iterationmode 1 collect (
            [ ($clef ||| "G") ($channel ||| 1) ($name ||| "output") ]
        );
        $numvoices = length($config);
        $config = trans($config);
        $clefs = $config::1;
        $midichannels = $config::2;
        $voicenames = $config::3;
        BP_SCORE_CONFIG = (
            [ "numvoices" $numvoices ]
            [ "clefs" $clefs ]
            [ "midichannels" $midichannels ]
            [ "voicenames" $voicenames ]
            [ 'showdurations' $showdurations ]
            [ 'tonedivision' $tonedivision ]
            [ 'showdynamics' $showdynamics ]
        );
        for $msg in BP_SCORE_CONFIG with @unwrap 1 do BP_DISPATCH_FUNC('roll', $msg);
        null
    )
);

